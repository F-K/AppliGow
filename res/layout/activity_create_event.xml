<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateEventActivity" >
   
    <TextView
        android:id="@+id/create_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_event"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/create_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_event"
        android:layout_below="@+id/create_event"
        android:layout_marginTop="25dp"
        android:text="@string/create_event_title" />

    <TextView
        android:id="@+id/create_event_date_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_event_date_start"
        android:layout_below="@+id/create_event_date_start_button"
        android:layout_marginTop="30dp"
        android:text="@string/create_event_date_end" />

    <EditText
        android:id="@+id/create_event_title_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/create_event_title"
        android:layout_alignBottom="@+id/create_event_title"
        android:layout_toRightOf="@+id/create_event_title"
        android:ems="10" />

    <EditText
        android:id="@+id/create_event_description_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/create_event_description"
        android:layout_alignBottom="@+id/create_event_description"
        android:layout_toRightOf="@+id/create_event_description"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/create_event_date_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/create_event_date_start"
        android:layout_alignBottom="@+id/create_event_date_start"
        android:layout_toRightOf="@+id/create_event_date_start"
        android:text="@string/create_event_date_start_button" />

    <Button
        android:id="@+id/create_event_time_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/create_event_date_start_button"
        android:layout_alignBottom="@+id/create_event_date_start_button"
        android:layout_toRightOf="@+id/create_event_date_start_button"
        android:text="@string/create_event_time_start_button" />

    <Button
        android:id="@+id/create_event_date_end_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/create_event_date_end"
        android:layout_alignBottom="@+id/create_event_date_end"
        android:layout_toRightOf="@+id/create_event_date_end"
        android:text="@string/create_event_date_end_button" />

    <Button
        android:id="@+id/create_event_time_end_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/create_event_date_end_button"
        android:layout_alignBottom="@+id/create_event_date_end_button"
        android:layout_toRightOf="@+id/create_event_date_end_button"
        android:text="@string/create_event_time_end_button" />

    <TextView
        android:id="@+id/create_event_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_event_address"
        android:layout_below="@+id/create_event_address"
        android:layout_marginTop="30dp"
        android:text="@string/create_event_category" />

    <TextView
        android:id="@+id/create_event_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_event_title"
        android:layout_below="@+id/create_event_title"
        android:layout_marginTop="30dp"
        android:text="@string/create_event_address" />

    <TextView
        android:id="@+id/create_event_address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/create_event_address"
        android:layout_alignBottom="@+id/create_event_address"
        android:layout_toRightOf="@+id/create_event_address"
        android:text="" />

    <TextView
        android:id="@+id/create_event_date_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_event_category"
        android:layout_below="@+id/create_event_category"
        android:layout_marginTop="30dp"
        android:text="@string/create_event_date_start" />

    <TextView
        android:id="@+id/create_event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_event_date_end"
        android:layout_below="@+id/create_event_date_end"
        android:layout_marginTop="30dp"
        android:text="@string/create_event_description" />

    <Spinner
        android:id="@+id/create_event_category_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_event_category"
        android:layout_toRightOf="@+id/create_event_category"
        android:layout_alignBaseline="@+id/create_event_category" />

    <Button
        android:id="@+id/create_event_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/create_event_title_edittext"
        android:layout_alignRight="@+id/create_event_category_spinner"
        android:layout_alignBaseline="@+id/create_event"
        android:background="#5ACA67"
        android:text="@string/create_event_submit" />

</RelativeLayout>
