<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Button Style -->
    <style name="customButton" parent="@android:style/Widget.Button">
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:gravity">center</item>
		<item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:padding">10dip</item>
	</style>
	
	<style name="green_button" parent="@style/customButton">
	    <item name="android:background">@drawable/green_button</item>
	</style>
	
	<style name="blue_button" parent="@style/customButton">
	    <item name="android:background">@drawable/blue_button</item>
	</style>
	
	<style name="red_button" parent="@style/customButton">
	    <item name="android:background">@drawable/red_button</item>
	</style>
	
	<!-- TextView Style -->
	<style name="custome_text_view">
	    <item name="android:textColor">#303030</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:typeface">serif</item>
	</style>
	
	<!-- EditText Style -->
	<style name="custom_edit_text">
	    <item name="android:textColor">#303030</item>
	    <item name="android:typeface">serif</item>
	    <item name="android:background">@drawable/custom_edit_text</item>
	</style>
	
</resources>
